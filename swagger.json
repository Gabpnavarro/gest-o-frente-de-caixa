{
  "swagger": "2.0",
  "info": {
    "title": "Documentação API Gestão de Frente de Caixa",
    "description": "Projeto desenvolvido ao longo do Móduio final do Curso de Desenvolvimento de Software com Foco em Back-end da Cubos Academy.",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/categoria": {
      "get": {
        "tags": [
          "Categories"
        ],
        "description": "Endpoint para listar as categorias cadastradas.",
        "responses": {
          "200": {
            "description": "Sucesso.",
            "schema": {
              "$ref": "#/definitions/listCategories"
            }
          },
          "500": {
            "description": "Erro Interno do Servidor.",
            "schema": {
              "$ref": "#/definitions/InternalServerError"
            }
          }
        }
      }
    },
    "/cliente": {
      "get": {
        "tags": [
          "Clients"
        ],
        "description": "Endpoint responsável por listar clientes.",
        "responses": {
          "200": {
            "description": "Sucesso.",
            "schema": {
              "$ref": "#/definitions/getClients"
            }
          },
          "500": {
            "description": "Erro Interno do Servidor.",
            "schema": {
              "$ref": "#/definitions/InternalServerError"
            }
          }
        }
      }
    },
    "/cliente/{id}": {
      "get": {
        "tags": [
          "Clients"
        ],
        "description": "Endpoint responsável por detalhar um cliente passado por parâmetro.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID do cliente"
          }
        ],
        "responses": {
          "200": {
            "description": "Sucesso.",
            "schema": {
              "$ref": "#/definitions/getOneClient"
            }
          },
          "404": {
            "description": "Cliente não existente.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Cliente não encontrado"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "Erro Interno do Servidor.",
            "schema": {
              "$ref": "#/definitions/InternalServerError"
            }
          }
        }
      },
      "put": {
        "tags": [
          "Clients"
        ],
        "description": "Endpoint responsável por atualizar um cliente passado por parâmetro.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID do cliente"
          },
          {
            "name": "obj",
            "in": "body",
            "description": "Dados para atualizar um cliente",
            "schema": {
              "$ref": "#/definitions/addClient"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Sucesso.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Atualização realizada com sucesso!"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "400": {
            "description": "CEP Inválido.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "O CEP não existe"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "404": {
            "description": "Cliente não existente.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Cliente não encontrado"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "Erro Interno do Servidor.",
            "schema": {
              "$ref": "#/definitions/InternalServerError"
            }
          }
        }
      }
    },
    "/cliente/": {
      "post": {
        "tags": [
          "Clients"
        ],
        "description": "Endpoint responsável por cadastrar um cliente.",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "description": "Dados para cadastrar um cliente",
            "schema": {
              "$ref": "#/definitions/addClient"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Sucesso.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Cliente cadastrado com sucesso!"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "400": {
            "description": "CEP Inválido.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "O CEP não existe"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "Erro Interno do Servidor.",
            "schema": {
              "$ref": "#/definitions/InternalServerError"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "InternalServerError": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "example": "Erro interno do servidor"
        }
      }
    },
    "listCategories": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "example": 2
          },
          "descricao": {
            "type": "string",
            "example": "Celulares"
          }
        }
      }
    },
    "addClient": {
      "type": "object",
      "properties": {
        "nome": {
          "type": "string",
          "example": "Joao Silva"
        },
        "email": {
          "type": "string",
          "example": "joaoSilva@gmail.com"
        },
        "cpf": {
          "type": "string",
          "example": "22233322222"
        },
        "cep": {
          "type": "string",
          "example": "40000000"
        },
        "numero": {
          "type": "number",
          "example": 12
        }
      }
    },
    "getOneClient": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "example": 1
        },
        "nome": {
          "type": "string",
          "example": "Maria Das Dores"
        },
        "email": {
          "type": "string",
          "example": "dorinhamilgrau@gmail.com"
        },
        "cpf": {
          "type": "string",
          "example": "12345612345"
        },
        "cep": {
          "type": "string",
          "example": "41223333"
        },
        "rua": {
          "type": "string",
          "example": "Rua joão das neves"
        },
        "numero": {
          "type": "number",
          "example": 18
        },
        "bairro": {
          "type": "string",
          "example": "Ondina"
        },
        "cidade": {
          "type": "string",
          "example": "Salvador"
        },
        "estado": {
          "type": "string",
          "example": "Bahia"
        }
      }
    },
    "getClients": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/getOneClient"
      }
    }
  }
}